<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/txvSignupTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register a new account" />

        <EditText
            android:id="@+id/etxtSignupName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Username"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/etxtSignupPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btnSignupRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btnSignupRegisterClick"
            android:text="Register" />

        <Button
            android:id="@+id/btnSignupReturn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btnSignupReturnClick"
            android:text="return" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>